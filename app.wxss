/**app.wxss**/
view, scroll-view {
  box-sizing: inherit;
}

.container {
  height: 100%;
  width: 100%;
  background: #FAFAFA;
  padding-top: 120rpx;
  box-sizing: border-box;
  color: rgba(0,0,0,.87);
}

.container.no-appbar {
  padding-top: 0;
}

.appbar {
  height: 120rpx;
  padding: 0 40rpx;
  box-sizing: border-box;
  box-shadow: rgba(0,0,0,.3) 0 4px 12px;
  position: fixed;
  left: 0;
  right: 0;
  top: 0;

  display: flex;
  align-items: center;
  justify-content: center;
  background: #F5F5F5;
  z-index: 16;
}

.no-appbar .appbar {
  /* To perserve shadow effect */
  transform: translateY(-120rpx);
}

.appbar input {
  margin-left: 20rpx;
  line-height: 50rpx;
  font-size: 40rpx;
  flex: 1;
}

.appbar .brand {
  margin-left: 20rpx;
  line-height: 50rpx;
  font-size: 40rpx;
  flex: 1;
}

.appbar .material-icons {
  color: rgba(0,0,0,.38);
}

@keyframes syncing {
  0% {
    transform: rotate(0);
  }

  100% {
    transform: rotate(-180deg);
  }
}

.syncing-backdrop {
  position: absolute;
  top: 120rpx;
  bottom: 0;
  left: 0;
  right: 0;

  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(2px);
  pointer-events: none;
}

.no-appbar .syncing-backdrop {
  top: 0;
}

.syncing-backdrop .material-icons {
  color: rgba(0,0,0,.38);
  font-size: 120rpx;
  animation: syncing .75s ease;
  animation-iteration-count: infinite;
}

.end-indicator {
  font-size: 30rpx;
  line-height: 36rpx;
  color: rgba(0,0,0,.38);
  margin-top: 40rpx;
  text-align: center;
}

@import './material-icons';

.material-icons {
  font-family: 'Material Icons';
  font-weight: normal;
  font-style: normal;
  font-size: 60rpx;  /* Preferred icon size */
  display: inline-block;
  line-height: 1;
  text-transform: none;
  letter-spacing: normal;
  word-wrap: normal;
  white-space: nowrap;
  direction: ltr;

  color: rgba(0,0,0,.7);

  /* Support for all WebKit browsers. */
  -webkit-font-smoothing: antialiased;
  /* Support for Safari and Chrome. */
  text-rendering: optimizeLegibility;

  /* Support for Firefox. */
  -moz-osx-font-smoothing: grayscale;

  /* Support for IE. */
  font-feature-settings: 'liga';
}
